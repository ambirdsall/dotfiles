#!/bin/sh

if [[ "--hard" == $@ ]]; then
  echo "*swish*"
  git reset --hard HEAD~
elif [[ "--swish" == $@ ]]; then
  echo "*swish*"
  git reset --hard HEAD~
elif [[ "--jordan" == $@ ]]; then
  echo "*swish*"
  git reset --hard HEAD~2
elif [[ "--steph" == $@ ]]; then
  echo "*swish*"
  git reset --hard HEAD~3
elif [[ $# -gt 0 ]]; then
  echo "*swish*"
  git reset $@
else
  echo "Did you call bank?"
  git reset HEAD~
fi
